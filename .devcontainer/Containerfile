# Use CentOS Stream 10 as the base image
FROM quay.io/fedora/fedora:42@sha256:4a91156d13492d388084ad1c193b3a29446f6cd4a4e81f7c58b4f9864dfc4ff1

# Install Python, pip, and development tools
RUN dnf install -y \
    python3-pip \
    'pkgconfig(cairo)' \
    'pkgconfig(cairo-gobject)' \
    'pkgconfig(gobject-introspection-1.0)' \
    'pkgconfig(mariadb)' \
    /usr/bin/pg_config && \
    dnf clean all

# Upgrade pip
RUN python -m pip install --upgrade pip

# Set up a working directory
WORKDIR /workspace
